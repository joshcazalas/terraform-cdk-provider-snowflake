{
    "compilerOptions": {
      "lib": ["ESNext", "dom"], 
      "target": "esNext", 
      "baseUrl": "./", 
      "esModuleInterop": true, 
      "moduleResolution": "node",
      "module": "CommonJS",
      "paths": {},
      "alwaysStrict": true,
      "allowUnreachableCode": false,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "noUncheckedIndexedAccess": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": ["./**/*.ts"],
    "exclude": [
      "node_modules/**/*"
    ]
  }